<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/background_dark"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/cupcake"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cupcake"
        android:contentDescription="@string/app_name"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        android:padding="15dp"
        android:textColor="@android:color/holo_blue_light"
        android:text="House of Cupcakes" />
    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:textColor="@android:color/darker_gray"
        android:text="We offer  high quality delicious cupcakes. Our treats are made fresh daily and are free of artificial colors and preservatives." />
    <TextView
        android:id="@+id/Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:textColor="@android:color/holo_blue_light"
        android:text="Contact" />
    <TextView
        android:id="@+id/Mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textColor="@android:color/darker_gray"
        android:text="Mobile : +1 - XXX - XXX - XXXX" />
    <TextView
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textColor="@android:color/darker_gray"
        android:text="Email : Naga999@email.com" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>